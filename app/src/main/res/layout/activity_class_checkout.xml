<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentSide.StudentActivity.ClassCheckoutActivity">

    <TextView
        android:id="@+id/textView5"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registered Class" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_class_checkout_recycler_view"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="400dp" >

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/activity_class_checkout_confirm_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm" />
    <Button
        android:id="@+id/activity_class_checkout_cancel_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel" />
</LinearLayout>